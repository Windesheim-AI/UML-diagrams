@startuml EcommerceDomainModel
package "E-commerce Domain Model" <<Rectangle>> {
    class User {
        + Username
        + Email
        + Password
        + Register()
        + Login()
    }

    class Product {
        + ProductID
        + Name
        + Price
        + Description
        + GetDetails()
    }

    class Order {
        + OrderID
        + Date
        + TotalAmount
        + PlaceOrder()
    }

    class Cart {
        + CartID
        + AddProduct()
        + RemoveProduct()
        + Checkout()
    }

    class Review {
        + ReviewID
        + Rating
        + Comment
        + WriteReview()
    }

    User "1" -- "0..*" Cart : Owns
    User "1" -- "0..*" Order : Places
    User "1" -- "0..*" Review : Writes
    Product "0..*" -- "1" Cart : Is In
    Product "0..*" -- "1" Order : Ordered
    Product "1" -- "0..*" Review : Reviewed By
}
@enduml
